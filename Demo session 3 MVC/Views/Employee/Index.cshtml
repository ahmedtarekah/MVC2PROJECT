@model IEnumerable<EmployeeViewModel>
@{
    ViewData["Title"] = "All Employee";
}

@if (TempData["Massage"] is not null)
{

    <div class=" alert alert-success">
        @TempData["Massage"]

        <script>
            window.setTimeout(function () {
                location.href = "Index";
            }, 5000);
        </script>
    </div>
}
<h1>All Employees</h1>
<br />
<br />
<a asp-action="Add" class="btn btn-success">Add New Employee</a>

<div class="row justify-content-center align-items-center mt-5">
    <form asp-action="Index" class="row col-8 offset-2">
        <div class="col-8">
            <input type="text" class="form-control" name="searchInp" id="searchInp" placeholder="Search " />
        </div>
        <div>
            <input type="submit" value="Search" class="btn btn-success"/>
        </div>
    </form>

@if (Model.Count() > 0)
{
   
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(E=>E.Name)</th>
                <th>@Html.DisplayNameFor(E => E.Age)</th>
                <th>@Html.DisplayNameFor(E=>E.Salary)</th>
                <th>@Html.DisplayNameFor(E => E.Address)</th>
                <th>@Html.DisplayNameFor(E => E.Email)</th>
                <th>@Html.DisplayNameFor(E => E.HireDate)</th>
                <th>@Html.DisplayNameFor(E => E.IsActive)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>@employee.Name</td>
                    <td>@employee.Age</td>
                    <td>@employee.Salary</td>
                    <td>@employee.Address</td>
                    <td>@employee.Email</td>
                    <td>@employee.HireDate</td>
                    <td>@employee.IsActive</td>


                   
                        <partial name="_ButtonsPartialView" model="@employee.Id.ToString()" />
                  
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-5 alert alert-warning">
        <h3>There Is NO Employees</h3>

    </div>
}

