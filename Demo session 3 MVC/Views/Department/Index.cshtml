@model IEnumerable<Department>
@{
    ViewData["Title"] = "All Department";
}


@if (TempData["Massage"] is not null)
{

    <div class=" alert alert-success">
        @TempData["Massage"]

        <script>
            window.setTimeout(function () {
            location.href = "Index";
            }, 5000);
        </script>
    </div>
}

<h1>All Departments</h1>
<br />
<br />
<a asp-action="Create" class="btn btn-primary">Create new Department</a>
@if (Model.Count() > 0)
{
    <table class="mt-3 table table-scripted table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(D=> D.Code)</th>
                <th>@Html.DisplayNameFor(D=> D.Name)</th>
                <th>@Html.DisplayNameFor(D=> D.DateOfCreation)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var deparment in Model)
            {
                <tr>
                    <td>@deparment.Code</td>
                    <td>@deparment.Name</td>
                    <td>@deparment.DateOfCreation.Date</td>


                    <partial name="_ButtonsPartialView" model="@deparment.ID.ToString()" />

                </tr>
            }

        </tbody>

    </table>
}

else
{
    <div class=" mt-4 alert alert-warning">
        <h3>There is No Departments </h3>
    </div>
}